# Test Environment Configuration
# Copy this file to .env.test and fill in your values
# NEVER commit .env.test to version control!

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous Key (safe to use in tests, limited by RLS)
SUPABASE_ANON_KEY=your-anon-key

# PostgreSQL Direct Connection (for DB tests only)
# Get these from Supabase Dashboard > Settings > Database
SUPABASE_DB_HOST=db.your-project.supabase.co
SUPABASE_DB_PORT=5432
SUPABASE_DB_USER=postgres
SUPABASE_DB_PASSWORD=your-database-password
SUPABASE_DB_NAME=postgres

# Admin E2E Test Credentials (for admin.spec.ts)
# These are required for testing the admin dashboard
# The user must exist in profiles table with is_admin=true
TEST_ADMIN_EMAIL=
TEST_ADMIN_PASSWORD=

# Regular User E2E Test Credentials
# For testing user-facing features (dashboard, orders, etc.)
TEST_USER_EMAIL=
TEST_USER_PASSWORD=

# E2E Test Mode Configuration
# E2E_READ_ONLY_MODE=true  - Validates no write operations occur
# E2E_STRIPE_TEST_MODE=true - Uses Stripe test keys and test cards
E2E_READ_ONLY_MODE=true
E2E_STRIPE_TEST_MODE=true

# Playwright Configuration
BASE_URL=http://localhost:3101
